{
    "plugins": ["node_modules/jsdoc/plugins/markdown"],
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
     "source": {
            "includePattern": ".*\\.js$",
            "include": [
                "./src",
                "./src/webcomponents",
                "./doc-static/index.md"
            ]
     },    
    "opts": {
            "recurse": true,
            "template": "node_modules/jsdoc/templates/default",
            "tutorials": "./doc-static/tutorials",
            "destination": "./doc"
    },
    "templates": {
        "cleverLinks": false,
        "default": {
            "staticFiles": {
                "include": [
                    "./docs-static"
                ]
            },            
        	"outputSourceFiles": true
        },
        "monospaceLinks": false
    }
}
